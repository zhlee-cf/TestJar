<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/openim_pop_chat_bg"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="0dp">

    <TextView
        android:id="@+id/pop_copy_tv"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:paddingBottom="@dimen/dimen_6dp"
        android:text="@string/openim_string_copy"
        android:textColor="@android:color/white" />

    <View
        android:layout_width="@dimen/dimen_4dp"
        android:layout_height="fill_parent"
        android:layout_marginLeft="@dimen/dimen_5dp"
        android:layout_marginRight="@dimen/dimen_5dp" />

    <TextView
        android:id="@+id/pop_delete_tv"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:paddingBottom="@dimen/dimen_6dp"
        android:text="@string/openim_string_delete"
        android:textColor="@android:color/white" />

</LinearLayout>